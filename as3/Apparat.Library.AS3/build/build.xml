<project name="Apparat.Library.AS3" default="default" basedir="../">
	
	<condition property="exe" value=".exe">
		<os family="windows"/>
	</condition>
	<condition property="exe" value="">
		<os family="unix"/>
	</condition>
	
	<property name="dir.build" value="${basedir}/build"/>
	<property name="dir.src" value="${basedir}/src"/>
	<property name="dir.bin" value="${basedir}/bin"/>
	
	<property file="${dir.build}/build.properties"/>
	
    <target name="default" depends="compile"/>
	
	<target name="clean">
		<delete failonerror="false" dir="${dir.bin}/apparat.swc"/>
	</target>
	
    <target name="compile" depends="clean">
    	<exec executable="${flex.compc}">
			<arg line="-define=CONFIG::Debug,false"/>
			<arg line="-define+=CONFIG::Release,true"/>
			<arg line="-strict"/>
			<arg line="-optimize"/>
			<arg line="-o '${dir.bin}/apparat.swc'"/>
			<arg line="-el '${flex.libs}/player/10/playerglobal.swc'"/>
			<arg line="-sp '${dir.src}'"/>
			<arg line="-is '${dir.src}'"/>
		</exec>
	</target>
</project>
